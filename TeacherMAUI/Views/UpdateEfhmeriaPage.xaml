<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeacherMAUI.Views.UpdateExeiPage">
    <ContentPage.Content>

        <ScrollView>
            <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

                <Label
                Text="Edit Chaperoning Form!"
                Style="{StaticResource Headline}"/>

                <Label Text="Enter where you are chaperoning"/>
                <Entry x:Name="locationEntry" />

                <Label Text="Enter which Day you are teaching"/>
                <Picker x:Name="dayEntry"/>

                <Label Text="Enter when the Chaperoning Starts" />
                <TimePicker x:Name="startchaperonEntry" />

                <Label Text="Enter when the Chaperoning Ends" />
                <TimePicker x:Name="endchaperonEntry"/>
                
                <Button Text="Save" Clicked="OnSaveClicked" Margin="0,20,0,0" />
                <Button Text="Cancel" Clicked="OnCancelClicked" Margin="0,10,0,0" />

            </VerticalStackLayout>
            </ScrollView>
    </ContentPage.Content>
</ContentPage>